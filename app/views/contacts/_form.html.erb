<h2>Add New Contact for <%= @company.name %>:</h2>

<%= form_for [@company, @contact] do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :position %>
  <%= f.text_field :position %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.submit "Create New Contact" %>

<% end %>
